<div class="addCW">
    <h1>Edit Coursework Below</h1>
    <form method="post" role="form" action='/assignments/{{assignment._id}}'>
        <input type="hidden" name="_method" value="PUT">

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Coursework Title"
                value="{{assignment.title}}" required>
        </div>

        <div class="form-group">
            <label for="module">Module</label>
            <input type="text" class="form-control" id="module" name="module" placeholder="Coursework Module"
                value="{{assignment.module}}" required>
        </div>
        <div class="form-group">
            <label for="assignmentProgress">Progress</label>
            <select class="form-control" id="assignmentProgress" name="assignmentProgress"
                value="{{assignment.assignmentProgress}}">
                <option>Incomplete</option>
                <option>In Progress</option>
            </select>

        </div>
        <!--<div class="form-group">
            <label for="dueDate">Due Date</label>
            <input type="text" class="form-control" id="dueDate" name="dueDate" placeholder="Due Date" required>

        </div>-->

        <div class="form-group">
            <!-- Date input -->
            <label class="control-label" for="dueDate">Due Date</label>
            <input class="form-control" id="dueDate" name="dueDate" placeholder="MM/DD/YYY" type="text"
                value="{{assignment.dueDate}}" />
        </div>

        <div class="form-group">
            <input type="submit" value="Save Assignment Changes" class="btn btn-primary">
        </div>

    </form>
</div>

<!--  jQuery -->
<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

<!-- Bootstrap Date-Picker Plugin -->
<script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />

<script>
    $(document).ready(function () {
        var date_input = $('input[name="dueDate"]'); //our date input has the name "date"
        var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
        var options = {
            format: 'dd/mm/yyyy',
            container: container,
            todayHighlight: true,
            autoclose: true,
        };
        date_input.datepicker(options);
    })
</script>

<script>
    $(function () {
        $('#assignmentProgress').val('{{assignment.assignmentProgress}}');
    });
</script>